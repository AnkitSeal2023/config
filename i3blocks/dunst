#!/bin/bash

STATE_FILE="/tmp/dunst_paused"

# Toggle Dunst
if pgrep -x dunst > /dev/null; then
    if [ -f "$STATE_FILE" ]; then
        dunstctl set-paused false
        rm "$STATE_FILE"
        echo "ğŸ””"
    else
        dunstctl set-paused true
        touch "$STATE_FILE"
        echo "ğŸ”•"
    fi
else
    echo "âŒ"
    echo
    echo "#888888"
fi
